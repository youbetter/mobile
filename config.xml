<?xml version='1.0' encoding='utf-8'?>
<widget id="today.youbetter" version="0.1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>YouBetter</name>
    <description>Let it shine</description>
    <author email="seanineurope@gmail.com" href="http://github.com/toomanydaves">Sean Jacke</author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="BackupWebStorage" value="none" />
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="phonegap-facebook-plugin" spec="node_modules/phonegap-facebook-plugin">
        <variable name="APP_ID" value="894927877288176" />
        <variable name="APP_NAME" value="YOU BETTER" />
    </plugin>
    <engine name="ios" spec="~3.9.2" />
</widget>
